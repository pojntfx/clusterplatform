FROM fedora:29
RUN mkdir -p /app
WORKDIR /app
RUN dnf install -y npm zip xorriso
COPY package.json .
ENV SERVICEDIR=src
ENV SERVICES=svc.js
ENV TRANSPORTER=TCP
COPY src src
CMD npm set registry ${NPM_REGISTRY} && npm install && node_modules/.bin/nodemon --inspect=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner
